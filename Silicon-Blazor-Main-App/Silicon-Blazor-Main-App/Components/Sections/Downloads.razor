<section id="download">
    <div class="container">
        <img src="/images/screens.png" alt="">
        <div class="content">
            <h2>Download Our App for Any Devices:</h2>
            <div class="content-parent">
                <div class="content-child">
                    <p>App Store</p>
                    @for (int i = 0; i < 5; i++)
                    {
                        <i class="fa-solid fa-star"></i>

                    }
                    <h4>Editor's Choice</h4>
                    <p>rating 4.7, 187K+ reviews</p>
                </div>
                <a asp-action="applestore" asp-controller="home"><img src="/images/appstore.svg" alt=""></a>
                <div class="content-child">
                    <p>Google Play</p>
                    @for (int i = 0; i < 5; i++)
                    {
                        <i class="fa-solid fa-star"></i>

                    }
                    <h4>App of the Day</h4>
                    <p>rating 4.8, 30K+ reviews</p>
                </div>
                <a asp-action="googleplay" asp-controller="home"><img src="/images/googleplay.svg" alt=""></a>
            </div>
        </div>
    </div>
</section>
